<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;" fx:controller="org.example.library_management_system.controllers.BooksViewController">
    <Label text="Books List" style="-fx-font-size: 18; -fx-font-weight: bold;" />
    <TableView fx:id="booksTable">
        <columns>
            <TableColumn text="Title" fx:id="titleColumn" />
            <TableColumn text="Author" fx:id="authorColumn" />
            <TableColumn text="Available" fx:id="availabilityColumn" />
        </columns>
    </TableView>

</VBox>
