<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.library_management_system.LibraryManagementHomeController">
    <!-- Center content -->
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <!-- Title text -->
            <Text text="Library Management System">
                <font>
                    <Font size="24.0"/>
                </font>
            </Text>

            <!-- Login and Sign Up Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
                <Button text="Login" fx:id="loginButton" onAction="#handleLogin" prefWidth="100.0" prefHeight="30.0"/>
                <Button text="Sign Up" fx:id="signupButton" onAction="#handleSignup" prefWidth="100.0" prefHeight="30.0"/>
            </HBox>
        </VBox>
    </center>

    <!-- Padding for layout -->
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
</BorderPane>
