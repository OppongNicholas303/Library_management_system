<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #f9f9f9; -fx-padding: 40;" fx:controller="org.example.library_management_system.controllers.ReturnViewController">
    <!-- Title Label -->
    <Label text="Return Book" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Form Grid -->
    <GridPane hgap="20" vgap="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #bdc3c7;">
        <!-- Patron ID Field -->
        <Label text="Patron ID:" />
        <TextField fx:id="patronIdField" GridPane.columnIndex="1" style="-fx-font-size: 16;" maxWidth="300"/>

        <!-- Item ID Field -->
        <Label text="Item ID:" GridPane.rowIndex="1" />
        <TextField fx:id="itemIdField" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 16;" maxWidth="300"/>
    </GridPane>

    <!-- Submit Button -->
    <Button text="Submit" fx:id="submitButton" style="-fx-font-size: 18; -fx-background-color: #3498db; -fx-text-fill: white; -fx-max-width: 150;" onAction="#handleReturn"/>
</VBox>
