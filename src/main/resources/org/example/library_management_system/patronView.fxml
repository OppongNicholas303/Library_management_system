<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;" fx:controller="org.example.library_management_system.controllers.PatronViewController">
    <Label text="Patrons List" style="-fx-font-size: 18; -fx-font-weight: bold;" />
    <TableView fx:id="patronsTable">
        <columns>
            <TableColumn text="Patron ID" fx:id="patronIdColumn" />
            <TableColumn text="First Name" fx:id="firstNameColumn" />
            <TableColumn text="Last Name" fx:id="lastNameColumn" />
            <TableColumn text="Contact" fx:id="contactColumn" />
        </columns>
    </TableView>
</VBox>
